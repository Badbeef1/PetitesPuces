@using PetitesPuces.Models
@model PPVendeurs
@{
   Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>Petites Puces</title>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
   <link rel="stylesheet" href="~/Content/css/styleGeneral.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
</head>
<body>
   @Html.Partial("index")
   <div class="container">
      <br />
      <div class="card">
         <div class="card-header">
            <h3 style="text-align:center;">@Model.NomAffaires</h3>
         </div>
         <div class="card-body">
            <ul class="list-group list-group-flush">
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Nom Complet: </h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@Model.Prenom @Model.Nom</h4>
                        </div>
                     </div>
                  </div>
               </li>
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Adresse: </h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@Model.Rue @Model.Ville @Model.Province @Model.CodePostal</h4>
                        </div>
                     </div>
                  </div>
               </li>
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Pays: </h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@Model.Pays</h4>
                        </div>
                     </div>
                  </div>
               </li>

               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Adresse Courriel: </h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@Model.AdresseEmail</h4>
                        </div>
                     </div>
                  </div>
               </li>

               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Téléphone 1: </h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@Model.Tel1</h4>
                        </div>
                     </div>
                  </div>
               </li>

               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Poids Maximum pour livrer:</h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@Model.PoidsMaxLivraison (lbs)</h4>
                        </div>
                     </div>
                  </div>
               </li>
               @{
                  double dblLivraisonGratuite = (double)Model.LivraisonGratuite;
               }
               <li class="list-group-item">
                  <div class="row">
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-start">
                           <h4>Montant pour la livraison gratuite:</h4>
                        </div>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end">
                           <h4>@dblLivraisonGratuite.ToString("0.00") $</h4>
                        </div>
                     </div>
                  </div>
               </li>
            </ul>
         </div>
         <div class="card-footer">
            <div class="row">
               <div class="col-sm-4">
                  <h4>% de redevances:</h4>
               </div>
               <div class="col-sm-4">
                  <input type="number" min="0" max="100" step="1">
               </div>
               <div class="col-sm-4">
                  <button class="btn btn-success">
                     Accepter
                  </button>
               </div>
            </div>
         </div>
      </div>
   </div>
</body>
</html>
