@model PetitesPuces.Models.userExemple

<!DOCTYPE html>

<html>
<head>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>Inscription</title>

   <!-- Latest compiled and minified CSS -->
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">

   <!-- jQuery library -->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

   <!-- Popper JS -->
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>

   <!-- Latest compiled JavaScript -->
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
   
   <!-- Font Awesome (Icons) -->
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
   
   <script>
      $(document).ready(function () {
         $("#btnPasswordVisible").click(function () {
            $("#iconVisible").toggleClass("fa-eye fa-eye-slash")
            var newType = ($("#tbPassword").attr("type") === "password") ? "text" : "password";
            $("#tbPassword").attr("type", newType);
         });

         $("#btnPasswordVisible2").click(function () {
            $("#iconVisible2").toggleClass("fa-eye fa-eye-slash")
            var newType = ($("#tbPassword2").attr("type") === "password") ? "text" : "password";
            $("#tbPassword2").attr("type", newType);
         });

      });
   </script>
   <style>
       .tooltiptext {
         visibility: hidden;
         width: 220px;
         background-color: black;
         color: #fff;
         text-align: center;
         border-radius: 6px;
         padding: 5px;
          opacity: 0.85;
  
         /* Position the tooltip */
         position: absolute;
         z-index: 1;
         top: -5px;
         left: 105%;
      }

      .tooltipB:hover .tooltiptext {
         visibility: visible;
      }
   </style>
</head>
<body>
   <div class="container" style="min-height: 100vh; display: flex; margin-top:150px;margin-bottom:150px;">

      <!-- Card -->
      <div class="card mx-auto my-auto" style="width: 40rem; min-width: 50rem">
         <div class="card-body h-100">

            <h5 class="card-title text-center">Inscription</h5>

            <br />
            @using (Html.BeginForm("VerifyEntry", "Inscription", FormMethod.Post))
            {

            <div class="container">
               <!-- Email -->
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                     <span class="input-group-text text-center" style="width: 50px">
                        <i class="fa fa-at" aria-hidden="true"></i>
                     </span>
                  </div>
                  @Html.EditorFor(x => x.username, new { htmlAttributes = new {
                  @class = "form-control",
                  @placeholder = "Inscrivez votre courriel",
                  @style = Model != null && Model.username == null ? "border:1px solid red" : "" }
                  })
               </div>

               <!-- Confirm Email-->
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                     <span class="input-group-text text-center" style="width: 50px">
                        <i class="fa fa-at" aria-hidden="true"></i>
                     </span>
                  </div>
                  @Html.EditorFor(x => x.confirmUsername, new { htmlAttributes = new {
                  @class = "form-control",
                  @placeholder = "Inscrivez votre courriel une autre fois",
                  @style = Model != null && Model.confirmUsername == null ? "border:1px solid red" : "" }
                  })

               </div>

               <!-- Password -->
               <div class="input-group mb-3 has-feedback">
                  <div class="input-group-prepend">
                     <span class="input-group-text text-center" style="width: 50px">
                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                     </span>
                  </div>
                  @Html.EditorFor(x => x.password, new { htmlAttributes = new {
                  @id = "tbPassword",
                  @class = "form-control",
                  @placeholder = "Inscrivez votre mot de passe",
                  @style = Model != null && Model.password == null  ? "border:1px solid red" : "", }
                  })
                  <span class="input-group-append">
                     <button class="btn btn-outline-secondary" type="button" style="border:1px solid #ced4da;border-left:none" id="btnPasswordVisible">
                        <i class="fa fa-eye form-control-feedback" id="iconVisible"></i>
                     </button>
                  </span>
               </div>

               <!-- Confirm Password-->
               <div class="input-group mb-3 has-feedback">
                  <div class="input-group-prepend">
                     <span class="input-group-text text-center" style="width: 50px">
                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                     </span>
                  </div>
                  @Html.EditorFor(x => x.confirmPassword, new { htmlAttributes = new {
                  @id = "tbPassword2",
                  @class = "form-control",
                  @placeholder = "Inscrivez votre mot de passe une autre fois",
                  @style = Model != null && Model.confirmPassword == null  ? "border:1px solid red" : "", }
                  })
                  <span class="input-group-append">
                     <button class="btn btn-outline-secondary" type="button" style="border:1px solid #ced4da;border-left:none" id="btnPasswordVisible2">
                        <i class="fa fa-eye form-control-feedback" id="iconVisible2"></i>
                     </button>
                  </span>
               </div>

               <br/>

               <!-- Accordion for vendeur-->
               <div class="card btn-block">
                  <Button class="card-header btn" id="vendeurHeading" data-toggle="collapse"
                          data-target="#sectionVendeur" aria-expanded="false" aria-controls="sectionVendeur" type="button">
                     Section pour les vendeurs
                     <span class="float-right"><i class="fas fa-chevron-down"></i></span>
                  </Button>

                  <div id="sectionVendeur" class="collapse" aria-labelledby="vendeurHeading">
                     <div class="card-body">
                        
                        <div class="form-row">
                           <div class="form-group col-md-12">
                              <label for="nom">Nom de l'entreprise</label>
                              <input type="text" class="form-control" id="nomAffaires" placeholder="Nom de l'entreprise">
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="form-group col-md-6">
                              <label for="nom">Nom</label>
                              <input type="text" class="form-control" id="nom" placeholder="Nom">
                           </div>
                           <div class="form-group col-md-6">
                              <label for="prenom">Prénom</label>
                              <input type="text" class="form-control" id="prenom" placeholder="Prénom">
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="form-group col-md-10">
                              <label for="rue">Rue</label>
                              <input type="text" class="form-control" id="rue" placeholder="15615 Boul Gouin">
                           </div>
                           <div class="form-group col-md-2">
                              <label for="pays">Pays</label>
                              <select id="pays" class="form-control">
                                 <option selected value="Canada">Canada</option>
                                 <option selected value="Canada">Canada</option>
                              </select>
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="form-group col-md-6">
                              <label for="province">Ville</label>
                              <input type="text" class="form-control" id="ville" placeholder="Dollard-des-Ormeaux">
                           </div>
                           <div class="form-group col-md-4">
                              <label for="province">Province</label>
                              <select id="province" class="form-control">
                                 <option selected value="">Choisir...</option>
                                 <option value="AB">Alberta</option>
                                 <option value="BC">Colombie-Britannique</option>
                                 <option value="PE">Île-du-Prince-Édouard</option>
                                 <option value="MB">Manitoba</option>
                                 <option value="NB">Nouveau-Brunswick</option>
                                 <option value="NS">Nouvelle-Écosse</option>
                                 <option value="ON">Ontario</option>
                                 <option value="QC">Québec</option>
                                 <option value="SK">Saskatchewan</option>
                                 <option value="NL">Terre-Neuve-et-Labrador</option>
                              </select>
                           </div>
                           <div class="form-group col-md-2">
                              <label for="codePostal">Code postal</label>
                              <input type="text" class="form-control" id="codePostal" placeholder="H9H 2A5">
                           </div>
                        </div>

                        <div class="form-row">
                           <div class="form-group col-md-6">
                              <label for="tel1">Téléphone 1</label>
                              <input type="text" class="form-control" id="tel1" placeholder="(514) 222-2222">
                           </div>
                           <div class="form-group col-md-6">
                              <label for="tel2">Téléphone 2</label>
                              <input type="text" class="form-control" id="tel2" placeholder="(514) 555-5555">
                           </div>
                        </div>

                        <div class="form-row">

                           <div class="form-group col-md-3">
                              <label for="poidsMaxLivraison">
                                  <span style="font-size: 12px">
                                      Poids livraison maximale
                                  </span>
                                 <span class="tooltipB">
                                    (?)
                                    <span class="tooltiptext"> Le poids maximal permis pour une commande</span>
                                 </span>
                              </label>
                              <div class="input-group">
                                 <input type="text" class="form-control" id="poidsMaxLivraison" placeholder="00">
                                 <div class="input-group-append">
                                    <span class="input-group-text">
                                       Lbs
                                    </span>
                                 </div>
                              </div>
                           </div>

                           <div class="form-group col-md-3">
                               <label for="livGratuit">
                                   <span style="font-size: 12px">
                                       Prix livraison Gratuite
                                       </span>
                                       <span class="tooltipB">
                                           (?)
                                           <span class="tooltiptext"> Le prix minimum d’une commande permettant au client de recevoir gratuitement son colis</span>
                                       </span>
                               </label>
                              <div class="input-group">
                                 <input type="text" class="form-control" id="livGratuit" placeholder="00.00">
                                 <div class="input-group-append">
                                    <span class="input-group-text">
                                       $
                                    </span>
                                 </div>
                              </div>
                           </div>

                           <div class="form-group col-md-6">
                              <label for="cbTPS">
                                 Taxes
                              </label>
                              <select id="ddlTaxes" class="form-control">
                                 <option value="3" selected>TPS et TVQ</option>
                                 <option value="1">TPS</option>
                                 <option value="2">TVQ</option>
                                 <option value="3">Aucun</option>
                              </select>
                           </div>

                        </div>

                     </div>
                     </div>
               </div>


               <br />
               <br />

               <p style="color:red">@Html.DisplayFor(x => x.errorMessage)</p>

            <div>
               <input type="submit" value="S'inscrire" class="btn btn-primary btn-block" />
            </div>
            <br/>
            <div>
               <a href="/Login" style="text-decoration: none;">
                  <input type="button" value="Retour à la page de connexion" class="btn btn-primary btn-block" />
               </a>
            </div>
               <hr />
               <br />
               <div>
                  <p>
                     <a href="/Login/RecupererPassword">
                        Oublié votre mot de passe?
                     </a>
                  </p>
               </div>
            </div>
            }
         </div>
      </div>
   </div>
</body>
</html>
