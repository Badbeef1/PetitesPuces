@model PetitesPuces.Models.PPClientViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inscription</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>

    <!-- Font Awesome (Icons) -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <!-- JQuery mask -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

    
    <script>
        $(document).ready(function () {
            $("#btnPasswordVisible").click(function () {
                $("#iconVisible").toggleClass("fa-eye fa-eye-slash")
                var newType = ($("#tbPassword").attr("type") === "password") ? "text" : "password";
                $("#tbPassword").attr("type", newType);
            });

            $("#btnPasswordVisible2").click(function () {
                $("#iconVisible2").toggleClass("fa-eye fa-eye-slash")
                var newType = ($("#tbPassword2").attr("type") === "password") ? "text" : "password";
                $("#tbPassword2").attr("type", newType);
            });

            $('#tbCodePostal').mask('AAA AAA');
            $('#tbTel1').mask('(000) 000-0000');
            $('#tbTel2').mask('(000) 000-0000');
            $('#tbLivraisonGratuite').mask('0 000.00');
            
        });
    </script>
    <style>
        .tooltiptext {
            visibility: hidden;
            width: 220px;
            background-color: black;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px;
            opacity: 0.85;
            /* Position the tooltip */
            position: absolute;
            z-index: 1;
            top: -5px;
            left: 105%;
        }

        .tooltipB:hover .tooltiptext {
            visibility: visible;
        }

        .custom-control-lg .custom-control-label::before,
        .custom-control-lg .custom-control-label::after {
            top: 0.1rem !important;
            left: -2rem !important;
            width: 1.25rem !important;
            height: 1.25rem !important;
        }

        .custom-control-lg .custom-control-label {
            margin-left: 0.5rem !important;
            margin-top: 1rem !important;
            font-size: 1rem !important;
        }

    </style>
</head>
<body>
    <div class="container" style="min-height: 100vh; display: flex; margin-top:150px;margin-bottom:150px;">

        <!-- Card -->
        <div class="card mx-auto my-auto" style="width: 40rem; min-width: 50rem">
            <div class="card-body h-100">

                <h5 class="card-title text-center">Inscription client ou vendeur</h5>
                <br />
                @using (Html.BeginForm("Inscription", "Internaute", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="container">
                        <!-- Email -->
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-center" style="width: 50px">
                                    <i class="fa fa-at" aria-hidden="true"></i>
                                </span>
                            </div>
                            @Html.EditorFor(x => x.vendeur.AdresseEmail, new { htmlAttributes = new {
                            @class = "form-control",
                            @placeholder = "Inscrivez votre courriel",
                            @style = Model != null && Model.vendeur.AdresseEmail == null ? "border:1px solid red" : "" }
                            })
                        </div>

                        <!-- Confirm Email-->
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-center" style="width: 50px">
                                    <i class="fa fa-at" aria-hidden="true"></i>
                                </span>
                            </div>
                            @Html.EditorFor(x => x.confirmUsername, new { htmlAttributes = new {
                            @class = "form-control",
                            @placeholder = "Inscrivez votre courriel une autre fois",
                            @style = Model != null && Model.confirmUsername == null ? "border:1px solid red" : "" }
                            })

                        </div>

                        <!-- Password -->
                        <div class="input-group mb-3 has-feedback">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-center" style="width: 50px">
                                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                </span>
                            </div>
                            @Html.EditorFor(x => x.vendeur.MotDePasse, new { htmlAttributes = new {
                            @id = "tbPassword",
                            @class = "form-control",
                            @placeholder = "Inscrivez votre mot de passe",
                            @style = Model != null && Model.vendeur.MotDePasse == null  ? "border:1px solid red" : "", }
                            })
                            <span class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" style="border:1px solid #ced4da;border-left:none" id="btnPasswordVisible">
                                    <i class="fa fa-eye form-control-feedback" id="iconVisible"></i>
                                </button>
                            </span>
                        </div>

                        <!-- Confirm Password-->
                        <div class="input-group mb-3 has-feedback">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-center" style="width: 50px">
                                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                </span>
                            </div>
                            @Html.EditorFor(x => x.confirmPassword, new { htmlAttributes = new {
                            @id = "tbPassword2",
                            @class = "form-control",
                            @placeholder = "Inscrivez votre mot de passe une autre fois",
                            @style = Model != null && Model.confirmPassword == null  ? "border:1px solid red" : "", }
                            })
                            <span class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" style="border:1px solid #ced4da;border-left:none" id="btnPasswordVisible2">
                                    <i class="fa fa-eye form-control-feedback" id="iconVisible2"></i>
                                </button>
                            </span>
                        </div>

                        <br />

                        <!-- Accordion for vendeur-->
                        <div class="card">
                            <div class="card-header">
                                
                                <div class="custom-control-lg custom-control custom-checkbox ">
                                    @Html.CheckBoxFor(x => x.boolVendeur, new {
                                       @id ="cbVendeur", @class= "custom-control-input", data_toggle="collapse"
                                       ,data_target="#sectionVendeur", aria_expanded="false" } )
                                    <label class="custom-control-label " for="cbVendeur">
                                        <span style="font-size:20px; font-weight:bold" class="align-text-bottom">Je veux être un vendeur</span>
                                    </label>
                                </div>


                                <!--<span class="float-right"><i class="fas fa-chevron-down"></i></span>-->
                            </div>
                            <div id="sectionVendeur" class="collapse" aria-labelledby="vendeurHeading">
                                <div class="card-body">

                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label for="tbNomAffaires">Nom de l'entreprise</label>
                                            @Html.EditorFor(x => x.vendeur.NomAffaires, new { htmlAttributes = new {
                                           @id = "tbNomAffaires",
                                           @class = "form-control",
                                           @placeholder = "Nom de l'entreprise"
                                           //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                       }})
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="tbNom">Nom</label>
                                            @Html.EditorFor(x => x.vendeur.Nom, new { htmlAttributes = new {
                                            @id = "tbNom",
                                            @class = "form-control",
                                            @placeholder = "Nom"
                                            //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                        }})
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="prenom">Prénom</label>
                                            @Html.EditorFor(x => x.vendeur.Prenom, new { htmlAttributes = new {
                                           @id = "tbPrenom",
                                           @class = "form-control",
                                           @placeholder = "Prénom"
                                           //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                       }
                                       })
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-10">
                                            <label for="tbRue">Rue</label>
                                            @Html.EditorFor(x => x.vendeur.Rue, new { htmlAttributes = new {
                                           @id = "tbRue",
                                           @class = "form-control",
                                           @placeholder = "15615 Boul Gouin"
                                           //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                       }
                                       })
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="ddlPays">Pays</label>
                                            @Html.DropDownListFor(x => x.vendeur.Pays, new SelectList(
                                                  new List<Object>{
                                                       new { value = "Canada" , text = "Canada"  }
                                                    }, "value", "text", null
                                            ),new { @id= "ddlPays", @class = "form-control"})
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="tbVille">Ville</label>
                                            @Html.EditorFor(x => x.vendeur.Ville, new { htmlAttributes = new {
                                           @id = "tbVille",
                                           @class = "form-control",
                                           @placeholder = "Dollard-des-Ormeaux"
                                           //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                       }
                                       })
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="ddlProvince">Province</label>
                                            @Html.DropDownListFor(x => x.vendeur.Province, new SelectList(
                                                   new List<Object>{
                                                        new { value = "" , text = "Choisir..."  },
                                                        new { value = "AB" , text = "Alberta"  },
                                                        new { value = "BC" , text = "Colombie-Britannique"  },
                                                        new { value = "PE" , text = "Île-du-Prince-Édouard"  },
                                                        new { value = "MB" , text = "Manitoba"  },
                                                        new { value = "NB" , text = "Nouveau-Brunswick"  },
                                                        new { value = "NS" , text = "Nouvelle-Écosse"  },
                                                        new { value = "ON" , text = "Ontario"  },
                                                        new { value = "QC" , text = "Québec"  },
                                                        new { value = "SK" , text = "Saskatchewan"  },
                                                        new { value = "NL" , text = "Terre-Neuve-et-Labrador"  }
                                                     }, "value", "text", ""
                                             ),new { @id= "ddlProvince", @class = "form-control"})
                                        </div>
                                        <div class="form-group col-md-2">
                                            <label for="tbCodePostal">Code postal</label>
                                            @Html.EditorFor(x => x.vendeur.CodePostal, new { htmlAttributes = new {
                                            @id = "tbCodePostal",
                                            @class = "form-control",
                                            @placeholder = "H9H 2A5"
                                            //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                        }
                                        })
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="tbTel1">Téléphone 1</label>
                                            @Html.EditorFor(x => x.vendeur.Tel1, new { htmlAttributes = new {
                                            @id = "tbTel1",
                                            @class = "form-control",
                                            @placeholder = "(514) 222-2222"
                                            //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                        }
                                        })
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="tbTel2">Téléphone 2</label>
                                            @Html.EditorFor(x => x.vendeur.Tel2, new { htmlAttributes = new {
                                            @id = "tbTel2",
                                            @class = "form-control",
                                            @placeholder = "(514) 555-5555"
                                            //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                        }
                                        })
                                        </div>
                                    </div>

                                    <div class="form-row">

                                        <div class="form-group col-md-3">
                                            <label for="tbPoidsMaxLivraison">
                                                <span style="font-size: 12px">
                                                    Poids livraison maximale
                                                </span>
                                                <span class="tooltipB">
                                                    (?)
                                                    <span class="tooltiptext"> Le poids maximal permis pour une commande</span>
                                                </span>
                                            </label>
                                            <div class="input-group">
                                                @Html.EditorFor(x => x.vendeur.PoidsMaxLivraison, new { htmlAttributes = new {
                                            @id = "tbPoidsMaxLivraison",
                                            @class = "form-control",
                                            @placeholder = "00"
                                            //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                        }
                                        })
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        Lbs
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-3">
                                            <label for="tbLivraisonGratuite">
                                                <span style="font-size: 12px">
                                                    Prix livraison Gratuite
                                                </span>
                                                <span class="tooltipB">
                                                    (?)
                                                    <span class="tooltiptext"> Le prix minimum d’une commande permettant au client de recevoir gratuitement son colis</span>
                                                </span>
                                            </label>
                                            <div class="input-group">
                                                @Html.EditorFor(x => x.vendeur.LivraisonGratuite, new { htmlAttributes = new {
                                           @id = "tbLivraisonGratuite",
                                           @class = "form-control",
                                           @placeholder = "0 000.00"
                                           //,@style = Model != null && Model.vendeur.NomAffaires == null  ? "border:1px solid red" : "",
                                       }
                                       })
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        $
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="ddlTaxes">
                                                Taxes
                                            </label>
                                            @Html.DropDownListFor(x => x.vendeur.Taxes, new SelectList(
                                                  new List<Object>{
                                                       new { value = true , text = "TPS et TVQ" },
                                                       new { value = false , text = "Aucun" }
                                                    }, "value", "text", true
                                            ),new { @id= "ddlTaxes", @class = "form-control"})
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>


                        <br />
                        <br />

                        <p style="color:red">@Html.DisplayFor(x => x.errorMessage)</p>

                        <div>
                            <input type="submit" value="S'inscrire" class="btn btn-primary btn-block" />
                        </div>
                        <br />
                        <div>
                            <a href="/Connexion" style="text-decoration: none;">
                                <input type="button" value="Retour à la page de connexion" class="btn btn-primary btn-block" />
                            </a>
                        </div>
                        <hr />
                        <br />
                        <div>
                            <p>
                                <a href="/Connexion/RecupererMDP">
                                    Oublié votre mot de passe?
                                </a>
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
