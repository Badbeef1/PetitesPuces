@using PetitesPuces.Models

@{
    List<PPDestinataires> notif = null;
    if (Session["vendeurObj"] == null)
    {
        if (Session["clientObj"] != null)
        {
            Response.Redirect(Url.Action("AccueilClient", "Client"));
        }
        else if (Session["gestionnaireObj"] != null)
        {
            Response.Redirect(Url.Action("AccueilGestionnaire", "Gestionnaire"));
        }
        else
        {
            Response.Redirect(Url.Action("Index", "Internaute"));
        }
    }
    else
    {
        DataClasses1DataContext db = new DataClasses1DataContext();
        db.Connection.Open();

        notif = (from desti in db.GetTable<PPDestinataires>()
                 where (desti.NoDestinataire.Equals((Session["vendeurObj"] as PPVendeurs).NoVendeur)) &&
                 (desti.EtatLu.Equals(0) && desti.Lieu == 1)
                 select desti).ToList();

        db.Connection.Close();
    }
}

