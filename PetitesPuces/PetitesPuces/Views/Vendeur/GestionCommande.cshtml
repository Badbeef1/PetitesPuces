@using PetitesPuces.Models
@model GererCommandeViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Content/css/styleGeneral.css">
</head>
<body>
    @Html.Partial("index")
    <div id="commNonLivrer" class="container">
        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="text-right">#</th>
                        <th scope="col" class="text-right"># de commande</th>
                        <th scope="col" class="text-left">Prénom</th>
                        <th scope="col" class="text-left">Nom</th>
                        <th scope="col" class="text-center"><input id="cbAll" type="checkbox" /></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                    }
                    @foreach (GererCommandeViewModel.GererCommande comm in Model.lstCommandeNonLivrer)
                    {
                        PPCommandes uneComm = comm.commande;
                        ++counter;
                        <tr data-toggle="collapse" data-target="#@("detailCommande"+uneComm.NoCommande)" class="clickable">
                            <th scope="row" class="text-right">@counter</th>
                            <td class="text-right">
                                <script type="text/javascript">
                                    function openTab(th) {
                                        window.open('/Vendeur/VoirPDFCommande?Comm=' + th.name, "_blank");
                                    }
                                </script>
                                <a name="@uneComm.NoCommande" class="clickable" onclick="openTab(this)" >Commande #: @uneComm.NoCommande</a>
                            </td>
                            <td class="text-left">
                                @uneComm.PPClients.Prenom
                            </td>
                            <td class="text-left">
                                @uneComm.PPClients.Nom
                            </td>
                            <td class="text-center">
                                Livré
                                <input class="form-control" type="checkbox" id="@(uneComm.NoCommande + "_checkBox")" />
                            </td>
                        </tr>
                        <div id="@("detailCommande"+uneComm.NoCommande)" class="collapse">
                            <div class="container">
                                <div class="row">
                                    <div id="infoClient_Commande_@uneComm.NoCommande" class="col-md-6">

                                    </div>
                                    <div id="infoClient_Commande_@uneComm.NoCommande" class="col-md-6">

                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <div id="commLivrer" class="container">

    </div>
</body>
</html>

