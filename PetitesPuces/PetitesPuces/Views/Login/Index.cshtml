
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>Page de connexion</title>

   <!-- Latest compiled and minified CSS -->
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">

   <!-- jQuery library -->
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

   <!-- Popper JS -->
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>

   <!-- Latest compiled JavaScript -->
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>

   <!-- Font Awesome (Icons) -->
   <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
<div class="container" style="min-height: 100vh; display: flex">
   
   <!-- Card -->
   <div class="card mx-auto my-auto" style="width: 30rem; min-width: 30rem">
      <div class="card-body text-center h-100">

         <h5 class="card-title">Connexion</h5>
         
         <br />
         
         <div class="container">
            <!-- Courriel -->
            <div class="input-group mb-3">
               <div class="input-group-prepend">
                  <span class="input-group-text text-center" style="width: 50px">
                     <i class="fa fa-at" aria-hidden="true"></i>
                  </span>
               </div>
               <input type="text" class="form-control" placeholder="Courriel" aria-label="Courriel">
            </div>


            <!-- Password -->
            <div class="input-group mb-3">
               <div class="input-group-prepend">
                  <span class="input-group-text text-center" style="width: 50px">
                     <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                  </span>
               </div>
               <input type="text" class="form-control" placeholder="Mot de passe" aria-label="Mot de passe">
            </div>

            <input type="submit" value="Connecter" class="btn btn-primary" />
            
            <hr/>
            
            <div>
               <p>
                  Pas de compte? <a href="">S'inscrire</a>&nbsp;&nbsp; / &nbsp;&nbsp;<a href="">Oublié votre mot de passe?</a>
               </p>
            </div>
         </div>
      </div>
   </div>
</div>
</body>
</html>
