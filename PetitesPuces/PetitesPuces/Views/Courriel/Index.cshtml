    <style>
        .sActionMessageListe > button {
            display: none;
        }

        .sMessListe:hover .sActionMessageListe > button {
            display: inline-block;
        }

        .sMessListe:hover {
            background-color: lightgrey;
        }
    </style>
</head>
<body>
    <header class="navbar bd-navbar">
        <a class="navbar-brand" href="#">Petites Puces</a>
    </header>
    <div class="container-fluid">
        <div class="row flex-xl-nowrap">
            <div class="col-12 col-md-3 col-xl-2 bd-sidebar">
                <nav class=" bg-faded sidebar">
                    <ul class="nav nav-pills flex-column bg-light">
                        @foreach (var lieux in Model.lstLieu)
                        {
                            var affichage = "";
                            if (lieux.NoLieu == 1)
                            {
                                affichage = strBoiteReception;
                            }
                            else if (lieux.NoLieu == 4)
                            {
                                affichage = strBrouillon;
                            }

                            <li class="nav-item">
                                <a href="@Url.Action("Index/" + affichage)">
                                    @if (lieux.NoLieu == 1)
                                    {
                                        <span class="fa fa-inbox"></span>
                                    }
                                    else if (lieux.NoLieu == 2)
                                    {
                                        <span class="fa fa-paper-plane"></span>
                                    }
                                    else if (lieux.NoLieu == 3)
                                    {
                                        <span class="fa fa-trash-alt"></span>
                                    }
                                    else if (lieux.NoLieu == 4)
                                    {
                                        <span class="fa fa-pencil-alt"></span>
                                    }
                                    else if (lieux.NoLieu == 5)
                                    {
                                        <span class="fa fa-trash-alt"></span>
                                    }
                                    @lieux.Description
                                </a>
                                    @if (Model.dicNotificationLieu.Keys.Contains(lieux.NoLieu) && Model.dicNotificationLieu[lieux.NoLieu] != 0)
                                    {
                                        <span class="badge badge-primary">@Model.dicNotificationLieu[lieux.NoLieu]</span>
                                    }
                                </li>
                            }

                                    <!--
                                    <li class="nav-item"><a href="#"><span class="fa fa-inbox"></span> Boite de réception</a> <span class="badge badge-primary">120</span></li>
                                    <li><a href="#"><span class="fa fa-pencil-alt"></span> Brouillons</a> <span class="badge badge-primary">1</span></li>
                                    <li><a href="#"><span class="fa fa-paper-plane"></span> Éléments envoyés</a></li>
                                    <li><a href="#"><span class="fa fa-trash-alt"></span> Éléments supprimés</a> <span class="badge badge-primary">13</span></li>-->
                                </ul>
                            </nav>
                        </div>


                        <main class="col-12 col-md-9 col-xl-10" id="divCorps">
                            @{
                                if (Model.strPage == strNouveauMessage)
                                {
                                    @Html.Partial("RedactionMessage")
                                }
                                else if (Model.strPage == strAffichageMessage)
                                {
                                    @Html.Partial("AffichageMessage", Model.valtupAfficheMessage)
                                }
                                else if (Model.strPage == strBoiteSupprime)
                                {

                                }
                                else
                                {
                                    @Html.Partial("ListeCourriel", Model.iplListeMessageAffiche)
                                }

                            }

                        </main>
                    </div>
                </div>
            </body>
        </html>
