@model PetitesPuces.ViewModels.CourrielVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Courriel</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/styleGeneral.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>

    <style>
        .sActionMessageListe > button {
            display: none;
        }

        .sMessListe:hover .sActionMessageListe > button {
            display: inline-block;
        }

        .sMessListe:hover {
            background-color: lightgrey;
        }
    </style>
</head>
<body>
    <header class="navbar bd-navbar">
        <a class="navbar-brand" href="#">Petites Puces</a>
        <ul class="navbar-nav">
            <li class="nav-item"><a href="#" class="nav-link">Nouveau Message</a></li>
        </ul>
    </header>
    <div class="container-fluid">
        <div class="row flex-xl-nowrap">
            <div class="col-12 col-md-3 col-xl-2 bd-sidebar">
                <nav class=" bg-faded sidebar">
                    <ul class="nav nav-pills flex-column bg-light">
                        @foreach(var lieux in Model.lstLieu)
                        {
                            <li class="nav-item">
                                <a herf="@Url.Action("Index", new { lieu = lieux.NoLieu})"><span class=""></span> @lieux.Description</a>
                                <span class="badge badge-primary"></span>
                            </li>
                        }

                        <!--
                        <li class="nav-item"><a href="#"><span class="fa fa-inbox"></span> Boite de réception</a> <span class="badge badge-primary">120</span></li>
                        <li><a href="#"><span class="fa fa-pencil-alt"></span> Brouillons</a> <span class="badge badge-primary">1</span></li>
                        <li><a href="#"><span class="fa fa-paper-plane"></span> Éléments envoyés</a></li>
                        <li><a href="#"><span class="fa fa-trash-alt"></span> Éléments supprimés</a> <span class="badge badge-primary">13</span></li>-->
                    </ul>
                </nav>
            </div>
            

            <main class="col-12 col-md-9 col-xl-8 py-md-3 pl-md-5">
                @{
                    if (Model.lieu == 1)
                    {
                        @Html.Partial("RedactionMessage")
                    }
                    else
                    {
                        @Html.Partial("ListeCourriel")
                    }
                }

            </main>
        </div>

        
    </div>
    

</body>
</html>
