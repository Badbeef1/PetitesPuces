@model PetitesPuces.ViewModels.MessageAfficheVM
@{ 
    //PetitesPuces.Models.PPMessages message = (Model.objDestinataire as PetitesPuces.Models.PPDestinataires).PPMessages;

    string strNomExpediteur = Model.StrNomAffichageExpediteur; //A suivre ... Philippe &lsaquo;PhilousLeLoup@Netscape.com&rsaquo;
    string strDateEnvoie = Model.Message.dateEnvoi.Value.ToString("dd MMMM yyyy");

}

<nav class="navbar bg-light">
    <ul class="navbar-nav navbar-expand bd-navbar">
        <li class="nav-item">
            <a href="#" class="btn btn-link" ><i class="fas fa-plus"></i> Nouveau Message</a>
        </li>
        <li class="nav-item">
            <a href="#" class="btn btn-link" ><i class="fas fa-reply-all"></i> Répondre</a>
        </li>
        <li class="nav-item">
            <a href="#" class="btn btn-link"><i class="fa fa-trash-alt"></i> Supprimer</a>
        </li>
    </ul>
</nav>


<div>
    <div style="height: 30px;">
        <h6>@Model.Message.objet</h6>
    </div>
    <div>
        <div>
            <div>
                <span>@Model.StrNomAffichageExpediteur</span><br />
                <span>@strDateEnvoie</span><br />
                <small>@Model.StrNomAffichageDestinataire</small>
            </div>
            @if (Model.Message.FichierJoint != null)
            {
                <br />
                <div>
                    <span>@Model.Message.FichierJoint.ToString()</span>
                    @Html.ActionLink("Télécharger", "TelechargeFichierJoin", new { nom = Model.Message.FichierJoint}, new { @class = "btn btn-outline-primary"})
                </div>
            }
        </div>
        <br />
        <div>
            <p>
                @Model.Message.DescMsg
            </p>
        </div>


    </div>
</div>
