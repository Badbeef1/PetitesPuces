@using PetitesPuces.Models
@model ValiderMotPasse


<!DOCTYPE html>

<html>
<head>
   <meta name="viewport" content="width=device-width" />
   <title>Oubli de mot de passe</title>
   
   
   <!-- Latest compiled and minified CSS -->
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">

   <!-- Font Awesome (Icons) -->
   <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
   <style type="text/css">
      .input-validation-error {
         border: 1px solid #ff0000;
         background-color: white;
      }
      /*Copie de la classe alert de bootstrap*/
      .field-validation-error {
         color: #b94a48;
         background-color: #f2dede;
         border-color: #eed3d7;
      }
   </style>
</head>
<body>
   <div class="container" style="min-height: 100vh; display: flex">

      <!-- Card -->
      <div class="card mx-auto my-auto" style="width: 30rem; min-width: 30rem">
         <div class="card-body text-center h-100">

            <h5 class="card-title">Oubli de mot de passe</h5>

            <br />
            @using (Html.BeginForm("RecupererMDP", "Connexion", FormMethod.Post))
            {
            <div class="container">
               <!-- Email -->
               <div class="input-group mb-3">
                  <div class="input-group-prepend">
                     <span class="input-group-text text-center" style="width: 45px">
                        <i class="fa fa-at" aria-hidden="true"></i>
                     </span>
                  </div>
                  @Html.EditorFor(x => x.courriel, new { htmlAttributes = new {
                  @class = "form-control",
                  @placeholder = "Inscrivez votre courriel",
                  @style = Model != null && Model.courriel == null ? "border:1px solid red" : "" }
               })

               </div>
               @Html.ValidationMessageFor(x => x.courriel)
               @{ 
                  if (!ViewBag.msgErreur.Equals(""))
                  {
                     <span class="field-validation-error">Il n'existe aucun compte pour ce courriel.</span>
                  }
               }
               <br />
               <input type="submit" value="Envoyer" class="btn btn-primary btn-block" />

               <br />
               <p>
                  <a href="/Connexion" style="text-decoration: none;">
                     <input type="button" value="Retour à la page de connexion" class="btn btn-primary btn-block" />
                  </a>
               </p>
               <p>
                  <a href="/Internaute" style="text-decoration: none;">
                     <input type="button" value="Retour à la page d'accueil" class="btn btn-primary btn-block" />
                  </a>
               </p>
            </div>
            }
         </div>
      </div>
   </div>
</body>
</html>
